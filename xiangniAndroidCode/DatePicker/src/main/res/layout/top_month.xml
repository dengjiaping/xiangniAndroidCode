<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_year"
        android:text="2017"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_left_month"
            android:text="四月"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#666666"
            android:background="@drawable/oval_ddd"
            android:layout_width="36dp"
            android:layout_height="36dp" />

        <TextView
            android:id="@+id/tv_center_month"
            android:layout_marginLeft="35dp"
            android:text="五月"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/colorOrange"
            android:background="@drawable/oval_orange"
            android:layout_width="36dp"
            android:layout_height="36dp" />
        <TextView
            android:id="@+id/tv_right_month"
            android:layout_marginLeft="35dp"
            android:text="五月"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="#666666"
            android:background="@drawable/oval_ddd_stroke"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </LinearLayout>

</RelativeLayout>