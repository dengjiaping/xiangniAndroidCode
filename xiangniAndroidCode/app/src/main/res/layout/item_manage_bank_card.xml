<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/page_padding"
    android:paddingRight="@dimen/page_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp10"
            android:id="@+id/iv_select"
            android:background="@drawable/sel_default"
            android:layout_height="16dp"
            android:layout_width="16dp" />
        <TextView
            android:id="@+id/tv_bank_card"
            android:layout_toRightOf="@id/iv_select"
            android:layout_toLeftOf="@+id/iv_delete"
            android:paddingRight="@dimen/page_padding"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#212121"
            android:letterSpacing="0.05"
            tools:text="工商银行储蓄卡（4622）"
            />
        <TextView
            android:id="@+id/tv_default"
            android:layout_toRightOf="@+id/iv_select"
            android:layout_below="@+id/tv_bank_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:paddingTop="8dp"
            android:textColor="#e65c10"
            android:lineSpacingExtra="12sp"
            android:text="默认"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_delete"
            android:src="@mipmap/shanchu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="16dp" />


</RelativeLayout>