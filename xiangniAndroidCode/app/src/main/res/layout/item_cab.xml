<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_cab"
        android:padding="@dimen/dp10"
        android:background="@drawable/sel_cab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cab_type"
            android:text="经济舱"
            android:textColor="@color/color333"
            android:textSize="@dimen/text_size_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="¥"
            android:layout_toLeftOf="@+id/tv_cab_price"
            android:textSize="10sp"
            android:textColor="@color/colorPrice"
            android:layout_alignBaseline="@+id/tv_cab_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_cab_price"
            android:layout_alignParentRight="true"
            android:text="940"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/colorPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.handongkeji.widget.NoScrollListView
        android:id="@+id/list_view_policy"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>