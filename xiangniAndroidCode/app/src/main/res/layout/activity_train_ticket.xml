<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ixiangni.ui.TopBar
        app:centerText="火车票"
       style="@style/topBarStyle"/>
    <RelativeLayout
        android:paddingLeft="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_marginTop="28dp"
            android:id="@+id/tv_start"
            android:textSize="12sp"
            android:textColor="@color/colorGray"
            android:text="出发地"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingTop="5dp"
            android:layout_marginBottom="@dimen/page_padding"
            android:layout_below="@+id/tv_start"
            android:id="@+id/tv_start_city"
            android:textColor="@color/color333"
            android:textSize="30sp"
            android:hint="请选择"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/iv_train"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:id="@+id/tv_end"
            android:layout_marginTop="28dp"
            android:textSize="12sp"
            android:textColor="@color/colorGray"
            android:text="目的地"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="5dp"
            android:layout_marginBottom="@dimen/page_padding"
            android:layout_below="@+id/tv_end"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_end_city"
            android:textColor="@color/color333"
            android:textSize="30sp"
            android:hint="请选择"
            android:layout_toRightOf="@+id/iv_train"
            android:gravity="right"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        

        <ImageView
            android:id="@+id/iv_train"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/huoche"
            android:layout_width="50dp"
            android:layout_height="50dp" />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorddd"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/page_padding">

        <TextView
            android:id="@+id/tv_cf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发日期"
            android:textColor="@color/colorGray" />

        <TextView
            android:id="@+id/tv_time_info"
            android:layout_toRightOf="@+id/tv_cf"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:lineSpacingExtra="9sp"
            android:text="2017年06月29号   明天"
            android:textColor="#333333"
            android:textSize="15sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/colorddd"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
        android:paddingTop="48dp"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_search"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="搜索"
            android:background="@drawable/rect_round_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>
