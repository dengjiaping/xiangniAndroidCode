<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ixiangni.ui.TopBar
        style="@style/topBarStyle"
        app:centerText="资料设置" />

    <LinearLayout
        android:id="@+id/ll_only_firend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            style="@style/itemStyle">

            <TextView

                android:background="@color/white"
                style="@style/itemTextStyle"
                android:text="设置备注" />

            <TextView
                android:id="@+id/tv_remark_name"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                style="@style/mineTextStyle.white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="13666666"
                android:textColor="@color/textLightColor"
                android:textSize="14sp" />
        </LinearLayout>

        <include layout="@layout/divider_middle" />

        <RelativeLayout style="@style/itemStyle">

            <TextView
                style="@style/itemTextStyle"
                android:text="不想看他的i想你圈" />

            <CheckBox
                android:id="@+id/cb_bukanta"
                style="@style/switchStyle" />
        </RelativeLayout>

        <include layout="@layout/divider_middle" />

        <RelativeLayout style="@style/itemStyle">

            <TextView
                style="@style/itemTextStyle"
                android:text="不想他看你的i想你圈" />

            <CheckBox
                android:id="@+id/cb_burangkan"
                style="@style/switchStyle" />
        </RelativeLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <RelativeLayout style="@style/itemStyle">

            <TextView
                style="@style/itemTextStyle"
                android:text="加入黑名单" />


            <!--<item name="android:layout_marginRight">@dimen/page_padding</item>-->
            <!--<item name="android:layout_alignParentRight">true</item>-->
            <!--<item name="android:layout_centerVertical">true</item>-->
            <!--<item name="android:layout_width">wrap_content</item>-->
            <!--<item name="android:layout_height">wrap_content</item>-->
            <TextView
                android:id="@+id/cb_add_to_black_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/page_padding"
                android:background="@drawable/sel_off_on" />
        </RelativeLayout>

        <include layout="@layout/divider_middle" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/tv_complain"
        style="@style/mineTextStyle"
        android:background="@color/white"
        android:text="投诉" />

    <Button
        android:id="@+id/btn_delete_friend"
        style="@style/btnStyle.delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除" />


</LinearLayout>
