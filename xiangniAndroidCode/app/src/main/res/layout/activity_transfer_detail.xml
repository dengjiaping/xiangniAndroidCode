<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.ixiangni.app.money.TransferDetailActivity">
    <com.ixiangni.ui.TopBar
        android:id="@+id/topbar"
        app:centerText="转账详情"
        style="@style/topBarStyle"/>

    <ImageView
        android:id="@+id/iv_success"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/topbar"
        android:src="@mipmap/collect_money1"
        android:layout_centerHorizontal="true"
        android:layout_width="65dp"
        android:layout_height="65dp" />
    <TextView
        android:id="@+id/tv_yishou"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_below="@+id/iv_success"
        android:layout_centerHorizontal="true"
        android:text="已收钱"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="银信币:"
        android:layout_below="@+id/tv_yishou"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:id="@+id/tv_yxb"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_look"
        android:layout_below="@+id/tv_yxb"
        android:paddingTop="5dp"
        android:text="查看零钱"
        android:textColor="@color/text_blue"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/page_padding"
        android:id="@+id/tv_time_zhuanzhang"
        tools:text="转账时间：2017-06-02 10:24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
