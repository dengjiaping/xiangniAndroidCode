<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ixiangni.ui.TopBar
        app:centerText="文件名称"
        style="@style/topBarStyle">
        <ImageView
            android:id="@+id/iv_add_file"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/page_padding"
            android:paddingRight="@dimen/page_padding"
            android:src="@mipmap/tianjaiwenjian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </com.ixiangni.ui.TopBar>

    <android.support.design.widget.TabLayout

        android:background="@color/white"
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        app:tabTextColor="@color/textColor2"
        app:tabSelectedTextColor="@color/themeRed"
        app:tabIndicatorColor="@color/themeRed"
        android:layout_height="@dimen/itemHeightLarge"/>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_padding" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_file"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
