<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/page_padding">

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/dingdanxiangqingfeiji" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_from_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_pay"
                android:letterSpacing="0.05"
                android:textColor="#313131"
                android:textSize="16sp"
                tools:text="北京-上海" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/sel_pay"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                tools:text="已付款" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_plan_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:letterSpacing="0.05"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="12sp"
                tools:text="05月18日-04月20日  共2晚" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_flight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:letterSpacing="0.05"
                android:textColor="#666666"
                android:textSize="12sp"
                tools:text="G101" />

            <TextView
                android:id="@+id/tv_cancel_order"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/sel_pay"
                android:gravity="center"
                android:letterSpacing="0.05"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                tools:text="取消订单" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>