<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:padding="@dimen/page_padding"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_hotel_pic"
        android:layout_gravity="center_vertical"
        tools:src="@mipmap/photo"
        android:layout_width="80dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_hotel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#313131"
                android:letterSpacing="0.05"
                tools:text="古北水镇古北之光温泉度假酒店"
                android:layout_toLeftOf="@+id/tv_yiyuding"
                android:layout_toStartOf="@+id/tv_yiyuding" />


            <TextView
            android:background="@drawable/sel_pay"
                android:id="@+id/tv_yiyuding"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#fff"
                android:letterSpacing="0.05"
                android:text="已预订"
                />

        </RelativeLayout>

        <LinearLayout
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hotel_size"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#999999"
                android:letterSpacing="0.05"
                tools:text="大床房1.8m  |  18平方米"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_plan_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#666666"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:layout_toLeftOf="@+id/tv_quxiao"
                android:letterSpacing="0.05"
                tools:text="05月18日-04月20日  共2晚"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/tv_quxiao"
                android:layout_alignParentRight="true"
                android:background="@drawable/sel_pay"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.05"
                android:text="取消订单"
                />
            
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>