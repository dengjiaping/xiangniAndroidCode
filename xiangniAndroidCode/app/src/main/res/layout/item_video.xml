<?xml version="1.0" encoding="utf-8"?>
<com.ixiangni.ui.PercentLinear xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_video"
        android:layout_width="match_parent"
        android:layout_height="105dp">
        <ImageView
            android:id="@+id/iv_head"
            android:src="@mipmap/zhibo"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_play"
            android:src="@mipmap/play"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <include layout="@layout/divider_match_parent"/>
    <TextView
        android:id="@+id/tv_time"
        android:gravity="right"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="2017-6-21"
        android:textColor="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
</com.ixiangni.ui.PercentLinear>