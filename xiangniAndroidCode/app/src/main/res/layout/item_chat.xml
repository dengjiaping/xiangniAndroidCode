<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/page_padding"
    android:paddingRight="@dimen/page_padding"
    android:paddingTop="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    android:layout_height="66dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:src="@mipmap/touxaing3"
        android:layout_width="@dimen/icon_size_50dp"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/view_not_read"
        android:background="@drawable/oval_red"
        android:layout_alignRight="@+id/iv_icon"
        android:layout_alignTop="@+id/iv_icon"
        android:layout_width="11dp"
        android:layout_height="11dp"/>

    <TextView
        android:id="@+id/tv_nick_name"
        android:textSize="17sp"
        android:paddingTop="5dp"
        tools:text="南岸思雨"
        android:layout_toRightOf="@+id/iv_icon"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/tv_time"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/textColor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_toLeftOf="@+id/tv_time"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/tv_message"
        android:layout_below="@+id/tv_nick_name"
        tools:text="有时间再说"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_time"
        android:paddingTop="6dp"
        tools:text="昨天"
        android:textSize="10sp"
        android:textColor="#b6b6b6"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>