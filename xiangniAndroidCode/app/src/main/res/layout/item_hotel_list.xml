<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_hotel_pic"
        android:src="@mipmap/photo"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="124dp" />
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="@dimen/page_padding"
        android:paddingRight="@dimen/page_padding"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_start_level"
            android:textColor="#ea5413"
            android:text="3星级"
            android:paddingLeft="@dimen/page_padding"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@+id/tv_start_level"
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_hotel_name"
            android:text="西安和颐酒店"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#313131"
            android:textSize="@dimen/text_size_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="9dp"
            android:textSize="14sp"
            android:layout_below="@+id/tv_hotel_name"
            android:id="@+id/tv_hotel_location"
            android:text="北京市双井街道百子湾后现代城"
            android:textColor="#666666"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>