<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_new_friend"
        style="@style/contactLayoutStyle">

        <ImageView


            android:id="@+id/iv_icon0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/newfriend" />

        <TextView
            android:id="@+id/tv_new_friend"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon0"
            android:text="新的朋友"
            android:textColor="#515151"
            android:textSize="@dimen/itemTextSize" />
        <LinearLayout

            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_new_friend"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_weiduxiaoxi"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="17dip"
                android:layout_height="17dip"
                android:background="@drawable/weidu_xiaoxi"
                android:gravity="center"
                android:text="5"
                android:textSize="12dip"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
        </LinearLayout>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="@dimen/page_padding"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_people_around"
        style="@style/contactLayoutStyle">

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fujinderen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon1"
            android:text="附近的人"
            android:textColor="#515151"
            android:textSize="@dimen/itemTextSize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="@dimen/page_padding"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_scan"
        style="@style/contactLayoutStyle">

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/saoyisao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon2"
            android:text="扫一扫"
            android:textColor="#515151"
            android:textSize="@dimen/itemTextSize" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="@dimen/page_padding"
        android:background="@color/divider" />

    <RelativeLayout
        android:id="@+id/rl_group_chat"
        style="@style/contactLayoutStyle">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/qunliao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon"
            android:text="群聊"
            android:textColor="#515151"
            android:textSize="@dimen/itemTextSize" />

    </RelativeLayout>

</LinearLayout>