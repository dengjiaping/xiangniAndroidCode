<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/rect_white_btn"
    android:layout_width="320dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:gravity="center"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/themeRed"
        android:text="输入支付密码"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:hint="支付密码"
        android:id="@+id/edt_password"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="@color/textColor2"
        android:textSize="15sp"
        android:padding="5dp"
        android:layout_margin="@dimen/page_padding"
        android:background="@drawable/rect_round_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="#aaaaaa"
        android:layout_marginRight="@dimen/page_padding"
        android:layout_marginLeft="@dimen/page_padding"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_size_50dp">
        <TextView
            android:id="@+id/tv_left"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/textLightColor"
            android:background="@drawable/sel_left_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <View
            android:layout_gravity="center_vertical"
            android:background="#aaaaaa"
            android:layout_width="1px"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_right"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/themeRed"
            android:background="@drawable/sel_right_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>