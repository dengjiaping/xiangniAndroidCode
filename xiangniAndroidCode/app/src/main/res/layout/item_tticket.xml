<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/fl_root"
    android:background="@color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_ticket"
        android:background="@drawable/sel_cab"
        android:paddingLeft="@dimen/pl_padding_left"
        android:paddingRight="@dimen/pl_padding_left"
        android:paddingTop="@dimen/pl_padding_top"
        android:paddingBottom="@dimen/pl_padding_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/item_plane_pre"/>
    </FrameLayout>
    <com.handongkeji.widget.NoScrollListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>