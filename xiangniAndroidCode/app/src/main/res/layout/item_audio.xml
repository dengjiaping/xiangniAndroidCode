<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:paddingTop="@dimen/page_padding"
    android:paddingBottom="@dimen/page_padding"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_arrow"
        android:src="@drawable/sel_play_audio"
        android:layout_width="16dp"
        android:layout_height="16dp" />

    <View
        android:layout_marginTop="8dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_toRightOf="@+id/iv_arrow"
        android:layout_toLeftOf="@+id/tv_audio_time"
        android:background="@color/text_blue"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:id="@+id/tv_audio_time"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/v_divider"
        android:background="#e9e9e9"
        android:layout_below="@+id/iv_arrow"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:paddingTop="8dp"
        android:layout_below="@id/v_divider"
        android:text="2017-6-21"
        android:textSize="12sp"
        android:textColor="@color/colorGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    

</RelativeLayout>