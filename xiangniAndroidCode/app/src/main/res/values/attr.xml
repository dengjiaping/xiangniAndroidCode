<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="smart_ui_enable_pull_down" format="boolean" />
    <attr name="smart_ui_enable_pull_up" format="boolean" />
    <attr name="smart_ui_background" format="color|reference" />

    <declare-styleable name="SmartPullableLayout">
        <attr name="smart_ui_enable_pull_down" />
        <attr name="smart_ui_enable_pull_up" />
        <attr name="smart_ui_background" />
    </declare-styleable>

    <declare-styleable name="WaitingDots">
        <attr name="dotsColor" format="color" />
        <attr name="period" format="integer" />
        <attr name="jumpHeight" format="integer" />
        <attr name="autoPlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CellLayout">
        <!--是否是正方形模式-->
        <attr name="isSquareCell" format="boolean"/>
        <!--各自之间的间隙-->
        <attr name="cellSpcing" format="dimension"/>
        <!--列数-->
        <attr name="columCount" format="integer"/>
    </declare-styleable>

    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color"/>
        <attr name="item_selector_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExpandTextView">
        <attr name="showLines" format="integer"/>
    </declare-styleable>
    <declare-styleable name="ActionBar">
        <attr name="title" format="string" localization="suggested" />
    </declare-styleable>
    <declare-styleable name="board_column">
        <attr name="column" format="integer" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="swipeEnable" format="boolean"/>
        <attr name="ios" format="boolean"/>
        <attr name="leftSwipe" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="PercentRelativeLayout">
        <attr name="widthSize" format="float"/>
        <attr name="heightSize" format="float"/>

        <attr name="fixFlag">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="FlowLayout">
        <attr name="horspac" format="dimension"/>
        <attr name="verspac" format="dimension"/>
    </declare-styleable>
</resources>